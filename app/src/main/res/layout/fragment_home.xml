<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.FragmentHome"
             android:background="@drawable/bg_app">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_color_box_rounded"
            android:elevation="15dp"
            android:visibility="visible"
            style="@style/AppTheme.CardView">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gorditas"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFF" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center_vertical">



        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">



                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/AppTheme.CardView"
                            android:background="@drawable/white_text_box_rounded">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                style="@style/CardView">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/raleway"
                                    android:text="¿Aún no sabes cómo usar el botón de emergencias? ¡Mira el siguiente video!"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="15dp"
                                    android:background="@drawable/alert_color_box_rounded"
                                    android:fontFamily="@font/raleway_semibold"
                                    android:drawableLeft="@android:drawable/ic_media_play"
                                    android:text="Ver video"
                                    android:textColor="#fff" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/AppTheme.CardView"
                            android:background="@drawable/white_text_box_rounded">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/AppTheme.CardView"
                            android:visibility="gone"
                            android:background="@drawable/white_text_box_rounded">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                style="@style/CardView">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/raleway"
                                    android:text="Es importante que completes tus datos antes de poder utilizar la alerta."
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                            <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/primary_color_box_rounded"
                                    android:fontFamily="@font/raleway_semibold"
                                    android:text="Registrarme"
                                    android:textColor="#fff" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>